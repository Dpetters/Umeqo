{% extends "base.html" %}

{% block title %}
| Events
{% endblock %}

{% block metadata %}
{{block.super}}
<link rel="stylesheet" href="{{ STATIC_URL }}css/employer_event_snippet.css" />
{% endblock %}

{% block content_area %}
<div class="main_block">
    <div class="main_block_header">
        <img class="main_block_header_icon" src="{{ STATIC_URL }}images/icons/calendar.png"/>
        <span class="main_block_header_title">Your Events</span>
    </div>
    <div class="main_block_content">
        <ul class="event_list">
        {% for event in upcoming_events %}
           <li>
           {% include "employer_event_snippet.html" %}
           </li>
        {% endfor %}
        </ul>
    </div>
</div>
{% endblock %}
